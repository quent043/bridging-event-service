{
  "name": "nest-typescript-starter",
  "private": true,
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "prestart": "npm run build && npm run db:setup",
    "start": "node dist/src/main",
    "build": "node --max-old-space-size=4096 ./node_modules/@nestjs/cli/bin/nest.js build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:dev": "npm run db:setup && nest start --watch",
    "start:debug": "npm run db:setup && nest start --debug --watch",
    "start:prod": "npm install --omit=dev && npm run build && npm run db:setup && npm run start",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/jest/bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:setup": "docker-compose up -d && npm run db:setup",
    "start:with-docker": "npm run docker:setup && npm run start:dev",
    "stop:with-docker": "npm run docker:down",
    "db:setup": "npx prisma migrate deploy",
    "db:reset": "npx prisma migrate reset --force",
    "prisma:generate": "npx prisma generate"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@nestjs/bull": "^10.2.3",
    "@nestjs/common": "^10.3.2",
    "@nestjs/core": "^10.4.4",
    "@nestjs/platform-express": "^10.4.4",
    "@nestjs/platform-socket.io": "^10.4.13",
    "@nestjs/websockets": "^10.4.13",
    "@prisma/client": "^6.0.1",
    "@supabase/supabase-js": "^2.46.2",
    "@wagmi/core": "^2.15.2",
    "bignumber.js": "^9.1.2",
    "bull": "^4.16.4",
    "ethers": "^6.13.4",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.1",
    "retry": "^0.13.1",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "viem": "^2.21.53"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.2",
    "@swc/cli": "^0.3.9",
    "@swc/core": "^1.4.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@types/retry": "^0.12.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "prisma": "^6.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
