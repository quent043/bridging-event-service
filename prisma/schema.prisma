generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BridgeEvent {
  id              Int      @id @default(autoincrement())
  amount          String
  token           String
  toChainId       Int
  bridgeName      String
  sender          String
  receiver        String
  metadata        String
  blockNumber     String
  transactionhash String?
  timestamp       DateTime @default(now())

  @@map("bridge_events")
}

model ProcessedBridgeData {
  id           Int            @id @default(autoincrement())
  type         BridgeDataType
  referenceId  String // token address or chain id
  volumeChange String
  totalVolume  String
  timestamp    DateTime       @default(now())

  @@index([type, referenceId])
  @@map("processed_bridge_data")
}

enum BridgeDataType {
  token
  chain
}
